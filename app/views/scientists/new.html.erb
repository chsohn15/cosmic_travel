<h1>Create a New Scientist</h1>

<% if @scientist.errors.any? %>
    <div id= "error_explanation">
        <h2>There were some errors:</h2>
    <ul>
        <% @scientist.errors.full_messages.each do |message| %>
            <li><%= message %>
        <% end %>
    </ul>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %><br>
    <%= f.submit %>
<% end %>